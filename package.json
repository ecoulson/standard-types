{
    "name": "@the-standard/types",
    "version": "1.0.0",
    "description": "Utility types used in standard programs",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "build": "tsc --project tsconfig.build.json",
        "clean": "rm -rf ./lib",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "postversion": "git push && git push --tags",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "test": "jest --config jest.config.js",
        "version": "npm run format && git add -A src"
    },
    "files": [
        "lib/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ecoulson/standard-types.git"
    },
    "keywords": [
        "Types"
    ],
    "author": "Evan Coulson",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ecoulson/standard-types/issues"
    },
    "homepage": "https://github.com/ecoulson/standard-types#readme",
    "devDependencies": {
        "@swc/core": "^1.3.15",
        "@swc/jest": "^0.2.23",
        "@types/jest": "^29.2.2",
        "jest": "^29.3.1",
        "prettier": "^2.7.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.8.4"
    }
}
